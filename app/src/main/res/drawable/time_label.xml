<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:left="4dp"
        android:top="4dp">
        <shape>
            <corners android:radius="12dp" />
            <solid android:color="#EEEEEE" />
        </shape>
    </item>

    <item
        android:right="4dp"
        android:bottom="4dp">
        <shape>
            <corners android:radius="12dp" />
            <solid android:color="#FFFFFF" />
        </shape>
    </item>

    <item
        android:bottom="4dp"
        android:left="4dp"
        android:right="4dp"
        android:top="4dp">
        <shape>
            <corners android:radius="12dp" />
            <solid android:color="@android:color/white" />
            <gradient android:endColor="#F6F7F8"
                android:startColor="#FBFCFC"
                android:angle="270"/>
        </shape>
    </item>

</layer-list>