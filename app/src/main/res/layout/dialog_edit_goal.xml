<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/white_corner_bg"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <ImageView
        android:id="@+id/iv_dialog_images"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"
        android:src="@drawable/dialog_cup" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/dialog_subtract"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_capacity_lower" />

        <EditText
            android:id="@+id/tv_capacity"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:text="200"
            android:maxLines="1"
            android:maxLength="10"
            android:inputType="number"
            android:background="@null"
            android:textCursorDrawable="@null"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="#111213"
            android:textSize="32dp" />

        <ImageView
            android:id="@+id/dialog_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_capacity_plus" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dialog_cancel"
            android:layout_width="110dp"
            android:layout_height="42dp"
            android:gravity="center"
            android:textSize="16dp"
            android:textColor="#939393"
            android:text="@string/matter_cancel"
            android:background="@drawable/gray_corner_bg"/>

        <TextView
            android:id="@+id/dialog_confirm"
            android:layout_width="110dp"
            android:layout_height="42dp"
            android:layout_marginLeft="10dp"
            android:textSize="16dp"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:text="@string/matter_confirm"
            android:background="@drawable/matter_add_bg"/>

    </LinearLayout>

</LinearLayout>