<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:padding="24dp"
        android:scaleType="centerCrop"
        android:src="@drawable/dalculate_up_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/sleeping_label_1"
            android:layout_width="60dp"
            android:layout_height="100dp"
            android:background="@drawable/time_label"
            android:gravity="center"
            android:text="0"
            android:textColor="#FF5C38"
            android:textSize="48dp" />

        <TextView
            android:id="@+id/sleeping_label_2"
            android:layout_width="60dp"
            android:layout_height="100dp"
            android:layout_marginLeft="12dp"
            android:background="@drawable/time_label"
            android:gravity="center"
            android:text="0"
            android:textColor="#FF5C38"
            android:textSize="48dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:src="@drawable/ic_dalculate_end_point" />

        <TextView
            android:id="@+id/sleeping_label_3"
            android:layout_width="60dp"
            android:layout_height="100dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/time_label"
            android:gravity="center"
            android:text="0"
            android:textColor="#FF5C38"
            android:textSize="48dp" />

        <TextView
            android:id="@+id/sleeping_label_4"
            android:layout_width="60dp"
            android:layout_height="100dp"
            android:layout_marginLeft="12dp"
            android:background="@drawable/time_label"
            android:gravity="center"
            android:text="0"
            android:textColor="#FF5C38"
            android:textSize="48dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/set_time"
        android:layout_width="140dp"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:background="@drawable/time_set_up_bg"
        android:drawableLeft="@drawable/up_time_ic"
        android:gravity="left|center_vertical"
        android:paddingLeft="18dp"
        android:drawablePadding="12dp"
        android:text="@string/setting_time"
        android:textColor="#FF5C38" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="22dp"
        android:gravity="center"
        android:text="@string/after_your_awakening"
        android:textColor="#111213"
        android:textSize="16dp" />

</LinearLayout>
