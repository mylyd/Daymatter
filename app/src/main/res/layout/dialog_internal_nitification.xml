<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="360dp"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/white_corner_bg"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_gravity="end"
        android:src="@drawable/ic_notification_close"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_notification_bg"
        android:visibility="visible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:gravity="center"
        android:layout_marginTop="24dp"
        android:layout_gravity="center_horizontal"
        android:text="@string/you_need_to_stay_hydrated"
        android:textColor="#111213"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/dialog_notification"
        android:layout_width="110dp"
        android:layout_height="42dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="18dp"
        android:background="@drawable/matter_add_bg"
        android:gravity="center"
        android:text="@string/matter_tab_drink"
        android:textColor="@android:color/white"
        android:textSize="16dp" />


</LinearLayout>