<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/ad_background"
    android:padding="4dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/ad_banner_container"
            android:layout_width="match_parent"
            android:background="@color/main_color_bg_end"
            android:layout_marginTop="23dp"
            android:layout_height="160dp">
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/ad_tag"
                android:src="@drawable/mediation_native_ad_tag"
                android:layout_gravity="left|center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <FrameLayout
                android:layout_gravity="center_vertical|end"
                android:id="@+id/ad_choice_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/mediation_native_ad_choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </FrameLayout>
        </FrameLayout>

    </FrameLayout>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="45dp">
        <FrameLayout
            android:id="@+id/ad_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_toLeftOf="@id/ad_btn"
            android:layout_toRightOf="@+id/ad_icon"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/ad_title"
                android:maxLines="1"
                android:textColor="#1B1B1B"
                android:textSize="14sp"
                android:text="sdfdndfd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/ad_desc"
                android:text="dfdfssssssssd\nsssssssss"
                android:textColor="#494949"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="8sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView
            android:id="@+id/ad_btn"
            android:text="install"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:textColor="#1B1B1B"
            android:textSize="12sp"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ad_bg"
            android:gravity="center"
            android:layout_width="80dp"
            android:layout_height="34dp" />

    </RelativeLayout>
</LinearLayout>