<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/share_top"
        android:text="New year left"
        android:textSize="20sp"
        android:padding="16dp"
        android:background="@drawable/reminder_share_top"
        android:textColor="@android:color/white"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content" />

    <FrameLayout
        android:background="@android:color/white"
        android:padding="32dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <LinearLayout
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/share_center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="2526"
                android:textColor="#111213"
                android:textSize="80sp" />

            <ImageView
                android:layout_marginTop="28dp"
                android:padding="4dp"
                android:background="@drawable/reminder_item_days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </FrameLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EAEAEA"/>

    <TextView
        android:id="@+id/share_bottom"
        android:text="New year left"
        android:textSize="14sp"
        android:padding="24dp"
        android:background="@drawable/reminder_shape_bottom"
        android:textColor="#8E8E8E"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"  />

</LinearLayout>