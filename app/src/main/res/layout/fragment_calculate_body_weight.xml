<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color_bg_end"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="120dp"
        android:layout_height="28dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:background="@drawable/punch_order_bg"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/pos_order"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/order_selected"
            android:gravity="center"
            android:paddingLeft="8dp"
            android:paddingTop="2dp"
            android:paddingRight="8dp"
            android:paddingBottom="2dp"
            android:text="@string/kg"
            android:textColor="#111213"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/neg_order"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingLeft="8dp"
            android:paddingTop="2dp"
            android:paddingRight="8dp"
            android:paddingBottom="2dp"
            android:text="@string/lbs"
            android:textColor="#9B9B9D"
            android:textSize="12sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="40kg"
        android:gravity="center"
        android:background="@drawable/ic_body_weight_bg"
        android:textColor="#111213"
        android:textSize="48dp" />

    <TextView
        android:id="@+id/set_time"
        android:layout_width="140dp"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:background="@drawable/time_set_up_bg"
        android:drawableLeft="@drawable/ic_body_weight_icon"
        android:gravity="left|center_vertical"
        android:paddingLeft="14dp"
        android:drawablePadding="10dp"
        android:text="@string/setting_weight"
        android:textColor="#FF5C38" />

    <FrameLayout
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="80dp"
        android:layout_marginTop="25dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:overScrollMode="never"
            android:layout_marginLeft="23dp"
            android:layout_marginRight="22dp"
            android:scrollbars="none"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:src="@drawable/item_mask_left"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:src="@drawable/item_mask_right"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/item_selector"
            android:layout_gravity="center_horizontal"/>

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginTop="10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_thin"
            android:layout_gravity="left"
            android:layout_marginLeft="16dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_heavy"
            android:layout_gravity="end"
            android:layout_marginRight="16dp"/>

    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#111213"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="28dp"
        android:gravity="center"
        android:text="@string/need_weight_data"
        android:textSize="16dp" />

</LinearLayout>
